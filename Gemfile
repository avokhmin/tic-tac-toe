source 'https://rubygems.org'

ruby '2.2.3'

gem 'rails', '4.2.4'

# HTML, JS, CSS
gem 'bootstrap-sass'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'sass-rails'
gem 'simple_form'
gem 'slim-rails'
gem 'uglifier'

group :production do
  gem 'rails_12factor'
  gem 'rack-timeout'
  gem 'puma'
end

group :development do
  gem 'better_errors'
  gem 'quiet_assets'
  gem 'rails_layout'
  gem 'web-console'
end

group :development, :test do
  gem 'byebug'
  gem 'pry-rails'
  gem 'pry-rescue'
  gem 'rspec-rails'
  gem 'thin'
end

group :test do
  gem 'capybara'
  gem 'launchy'
  gem 'selenium-webdriver'
  gem 'shoulda-matchers'
end
